{
  "cli": {
    "version": ">=7.8.0",
    "requireCommit": false,
    "appVersionSource": "remote",
    "promptToConfigurePushNotifications": false
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk",
        "withoutCredentials": true,
        "gradleCommand": ":app:bundleRelease"
      },
      "distribution": "store"
    },
    "ci": {
      "android": {
        "buildType": "apk",
        "withoutCredentials": true,
        "distribution": "internal",
        "env": {
          "EXPO_NO_CACHE": "true",
          "EAS_NO_METRO": "true",
          "EAS_SKIP_JAVASCRIPT_BUNDLING": "1",
          "EXPO_NO_BUNDLER": "1",
          "JAVA_TOOL_OPTIONS": "-Xmx6g"
        }
      },
      "ios": {
        "simulator": true
      },
      "developmentClient": false,
      "autoIncrement": true,
      "distribution": "internal"
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "YOUR_APPLE_ID",
        "ascAppId": "YOUR_APP_STORE_CONNECT_APP_ID",
        "appleTeamId": "YOUR_APPLE_TEAM_ID"
      },
      "android": {
        "serviceAccountKeyPath": "./path-to-google-service-account.json",
        "track": "production"
      }
    }
  }
}
