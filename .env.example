# ===================================
# Stilya Environment Variables Template
# ===================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control!

# Supabase Configuration (Required)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Key (for batch processing - server-side only)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Affiliate APIs (Optional)
LINKSHARE_API_TOKEN=your_linkshare_token_here
LINKSHARE_MERCHANT_ID=your_merchant_id_here
LINKSHARE_APPLICATION_ID=your_application_id_here
LINKSHARE_AFFILIATE_ID=your_affiliate_id_here

# Rakuten API Configuration (Optional)
RAKUTEN_APP_ID=your_rakuten_app_id
RAKUTEN_AFFILIATE_ID=your_rakuten_affiliate_id
RAKUTEN_APP_SECRET=your_rakuten_app_secret

# A8.net API (Optional)
A8_NET_API_KEY=your_a8_net_api_key

# App Environment
NODE_ENV=development
EAS_PROJECT_ID=your_eas_project_id

# Development Configuration (Optional)
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_DEMO_MODE=false

# Local Supabase (Development only)
# Uncomment and set to true if using local Supabase instance
# EXPO_PUBLIC_USE_LOCAL_SUPABASE=true
