
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "noImplicitAny": false,
    "lib": ["DOM", "ESNext"],
    "target": "ES2020"
  },
  "include": ["src", "App.tsx"],
  "exclude": ["node_modules", "src/__tests__/**/*"]
}
